            <input type="text" class="form-control" name="bankAccountNum" id="bankAccountNum">
          </div>
          <div class="form-group">
            <label for="clientName">Client Name:</label>
            <input type="text" class="form-control" name="clientName" id="clientName">
          </div>
          <div class="form-group">
            <label for="clientBoNum">BO Number: </label>
            <input type="text" class="form-control" name="clientBoNum" id="clientBoNum">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>


